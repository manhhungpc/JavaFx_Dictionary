<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<HBox prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.application.Controller">
   <children>
      <VBox prefHeight="400.0" prefWidth="174.0">
         <children>
            <HBox>
               <children>
                  <Button fx:id="homeButton" mnemonicParsing="false" onAction="#goHomePage" text="Home" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#search" text="Search" />
               </children>
            </HBox>
            <TextField fx:id="inputSearchKey" onAction="#setOnEnterPress" promptText="enter searching word" />
            <ListView fx:id="wordListView" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <VBox prefHeight="400.0" prefWidth="276.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox prefHeight="103.0" prefWidth="276.0" VBox.vgrow="NEVER" />
            <WebView fx:id="resultField" prefHeight="603.0" prefWidth="476.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</HBox>
