<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<HBox prefHeight="400.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.application.Controller">
   <children>
      <VBox prefHeight="400.0" prefWidth="174.0">
         <children>
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#search" text="Search" />
            <TextField fx:id="inputSearchKey" promptText="enter searching word" />
            <ListView fx:id="wordListView" prefHeight="350.0" prefWidth="177.0" />
         </children>
      </VBox>
      <VBox prefHeight="400.0" prefWidth="276.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <WebView fx:id="resultField" prefHeight="402.0" prefWidth="276.0" />
         </children>
      </VBox>
   </children>
</HBox>
